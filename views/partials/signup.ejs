<form action="/auth/local/new/" method="POST" id="localusernew" class="localuserform">
	<p>Sign Up</p>
	<label for="email">Email:</label>
	<br/>
	<input class="localuserinput form-control" type="text" name="email" id="email" placeholder="type your email" />


	<label for="username">Username:</label>
	<br/>
	<input class="localuserinput form-control" type="text" name="username" id="username" placeholder="type a username" />
	<br/>
	<label for="password">Password:</label>
	<br/>
	<input class="localuserinput form-control" type="password" name="password" id="password" placeholder="pick a password" />
	<br/>
	<label for="password2">Retype Password:</label>
	<br/>
	<input class="localuserinput form-control" type="password" name="password2" id="password2" placeholder="retype your password" />
	<br/>
	<label for="profile_pic">Paste the link to an image you would like to use as a profile picture</label>
	<input class="localuserinput form-control" type="text" name="profile_pic" id="profile_pic" placeholder="https://mysite.com/myimage.jpg" />
	<br/>
	<br/>
	<input type="submit" class="localusersubmit btn btn-primary"/>
	<br/>
	<br/>
</form>

