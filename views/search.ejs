<!DOCTYPE html>
<html>
<head>
	<title>Scope Blogs</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
	<link rel="stylesheet" href="/css/scope.css" />
	<link rel="stylesheet" href="/css/search.css" />
</head>
<body>
	<%- include("./partials/nav",{user: user}) %>


	<br/>
	<br/>
	<div class="searcher">
		<input class="form-control" name="search" id="search" placeholder="search for posts">
		<button class="btn search-btn" onclick=" window.location ='/post/search/' + document.getElementById('search').value; ">
			Search
		</button>
	</div>
	<% posts.forEach((post) =>{ %>
		<div id="<%= post._id %>" class="dashboard-post">
			<h1> <%= post.title %> </h1>
			<img src="<%= post.image %>" alt="<%= post.description %>"/>
			<p> <%= post.description %> </p>
			<% post.tags.forEach((tag) => { %>
				<a href="/post/search/<%= tag %>" class="post-tag"> <%= tag %> </a>
			<% }) %>

			<br/>
			<br/>
			<a href="/post/reblog/<%= post._id %>">Reblog this Post</a>
			<br/>
			<a href="/user/profile/<%= post.original_poster._id %>">Posted By <%= post.original_poster.username %></a>
			<br/>
		</div>
	<% }) %>

</body>
</html>

